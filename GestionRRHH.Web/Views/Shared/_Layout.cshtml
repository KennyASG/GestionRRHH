<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Gestión RRHH</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
<div class="flex h-screen">
    <!-- Sidebar -->
    <div class="w-64 bg-gray-900 text-white flex flex-col">
        <!-- Logo -->
        <div class="p-6 border-b border-gray-700">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center">
                    <i class="fas fa-users text-white"></i>
                </div>
                <span class="text-xl font-bold">Gestión RRHH</span>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 p-4 space-y-2">
            <a href="@Url.Action("Index", "Home")" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition duration-200">
                <i class="fas fa-home"></i>
                <span>Dashboard</span>
            </a>
            <a href="@Url.Action("Index", "Empleados")" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition duration-200">
                <i class="fas fa-users"></i>
                <span>Empleados</span>
            </a>
            <a href="../Departamentos" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition duration-200">
                <i class="fas fa-building"></i>
                <span>Departamentos</span>
            </a>
            <a href="/Puestos" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition duration-200">
                <i class="fas fa-briefcase"></i>
                <span>Puestos</span>
            </a>
            <a href="#" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition duration-200">
                <i class="fas fa-money-check-alt"></i>
                <span>Nóminas</span>
            </a>
            <a href="#" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition duration-200">
                <i class="fas fa-calendar-alt"></i>
                <span>Asistencias</span>
            </a>
            <a href="#" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition duration-200">
                <i class="fas fa-umbrella-beach"></i>
                <span>Vacaciones</span>
            </a>
            <a href="#" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition duration-200">
                <i class="fas fa-chart-bar"></i>
                <span>Reportes</span>
            </a>
        </nav>

        <!-- User Info -->
        <div class="p-4 border-t border-gray-700">
            <div class="flex items-center space-x-3 mb-3">
                <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
                    <i class="fas fa-user text-sm"></i>
                </div>
                <div class="flex-1">
                    <p class="text-sm font-medium">@User.Identity?.Name</p>
                    <p class="text-xs text-gray-400">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</p>
                </div>
            </div>
            <a href="@Url.Action("Logout", "Account")"
               class="flex items-center space-x-2 text-red-400 hover:text-red-300 transition duration-200">
                <i class="fas fa-sign-out-alt"></i>
                <span class="text-sm">Cerrar Sesión</span>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Header -->
        <header class="bg-gray-800 text-white p-4">
            <div class="flex items-center justify-between">
                <!-- Left side -->
                <div class="flex items-center space-x-4">
                    <button onclick="history.back()" class="flex items-center space-x-2 text-gray-300 hover:text-white transition duration-200">
                        <i class="fas fa-arrow-left"></i>
                        <span class="text-sm">Atrás</span>
                    </button>
                    <div class="border-l border-gray-600 h-6"></div>
                    <div>
                        <h1 class="text-lg font-semibold">@ViewData["Title"]</h1>
                        <p class="text-xs text-gray-400">Sistema de Gestión RRHH</p>
                    </div>
                </div>

                <!-- Right side -->
                <div class="flex items-center space-x-3">
                    <button class="bg-yellow-500 hover:bg-yellow-600 text-black px-4 py-2 rounded-lg text-sm font-medium transition duration-200">
                        <i class="fas fa-plus mr-1"></i>Nuevo
                    </button>

                    <button class="p-2 text-gray-400 hover:text-white rounded-lg hover:bg-gray-700 transition duration-200">
                        <i class="fas fa-user"></i>
                    </button>

                    <button class="p-2 text-gray-400 hover:text-white rounded-lg hover:bg-gray-700 transition duration-200">
                        <i class="fas fa-envelope"></i>
                    </button>

                    <div class="w-6 h-6 bg-blue-600 rounded-full flex items-center justify-center text-xs font-bold">
                        2
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 overflow-y-auto p-6 bg-gray-50">
            @RenderBody()
        </main>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>