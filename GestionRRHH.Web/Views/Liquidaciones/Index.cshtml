@model IEnumerable<GestionRRHH.Web.Models.Entities.Liquidacione>

@{
    ViewData["Title"] = "Liquidaciones";
    var fechaInicio = ViewBag.FechaInicio as DateOnly?;
    var fechaFin = ViewBag.FechaFin as DateOnly?;
    var empleadoId = ViewBag.EmpleadoId as int?;
    var estado = ViewBag.Estado as string;
    
    var totalLiquidaciones = Model.Count();
    var calculadas = Model.Count(l => l.Estado == "calculada");
    var pagadas = Model.Count(l => l.Estado == "pagada");
    var totalMonto = Model.Sum(l => l.TotalLiquidacion);
    var totalIndemnizaciones = Model.Sum(l => l.Indemnizacion ?? 0);
    var totalVacaciones = Model.Sum(l => l.PagoVacaciones ?? 0);
}

@if (TempData["Success"] != null)
{
    <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        @TempData["Error"]
    </div>
}

<!-- Header -->
<div class="mb-6">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Liquidaciones</h1>
            <p class="text-gray-600">Gestión de liquidaciones por terminación de contrato laboral</p>
        </div>
        <div class="flex space-x-3">
            <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition duration-200">
                <i class="fas fa-plus mr-2"></i>Nueva Liquidación
            </a>
        </div>
    </div>
</div>

<!-- Métricas Cards -->
<div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-6">
    <div class="bg-blue-600 rounded-lg p-4 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-blue-100 text-sm">Total</p>
                <p class="text-2xl font-bold">@totalLiquidaciones</p>
            </div>
            <i class="fas fa-handshake text-2xl opacity-80"></i>
        </div>
    </div>
    
    <div class="bg-yellow-600 rounded-lg p-4 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-yellow-100 text-sm">Calculadas</p>
                <p class="text-2xl font-bold">@calculadas</p>
            </div>
            <i class="fas fa-calculator text-2xl opacity-80"></i>
        </div>
    </div>
    
    <div class="bg-green-600 rounded-lg p-4 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-green-100 text-sm">Pagadas</p>
                <p class="text-2xl font-bold">@pagadas</p>
            </div>
            <i class="fas fa-check-circle text-2xl opacity-80"></i>
        </div>
    </div>
    
    <div class="bg-purple-600 rounded-lg p-4 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-purple-100 text-sm">Total Monto</p>
                <p class="text-xl font-bold">@totalMonto.ToString("C")</p>
            </div>
            <i class="fas fa-money-bill-wave text-2xl opacity-80"></i>
        </div>
    </div>
    
    <div class="bg-red-600 rounded-lg p-4 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-red-100 text-sm">Indemnizaciones</p>
                <p class="text-xl font-bold">@totalIndemnizaciones.ToString("C")</p>
            </div>
            <i class="fas fa-gavel text-2xl opacity-80"></i>
        </div>
    </div>
</div>

<!-- Filtros -->
<div class="bg-white rounded-lg shadow mb-6 p-6">
    <form method="get" asp-action="Index">
        <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Fecha Inicio</label>
                <input type="date" name="fechaInicio" value="@fechaInicio?.ToString("yyyy-MM-dd")" 
                       class="block w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Fecha Fin</label>
                <input type="date" name="fechaFin" value="@fechaFin?.ToString("yyyy-MM-dd")" 
                       class="block w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Empleado</label>
                <select name="empleadoId" asp-items="ViewBag.Empleados" class="block w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">Todos los empleados</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Estado</label>
                <select name="estado" class="block w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">Todos los estados</option>
                    <option value="calculada" selected="@(estado == "calculada")">Calculada</option>
                    <option value="pagada" selected="@(estado == "pagada")">Pagada</option>
                </select>
            </div>

            <div class="flex items-end">
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition duration-200">
                    <i class="fas fa-search mr-2"></i>Filtrar
                </button>
            </div>
        </div>

        @if (fechaInicio.HasValue || fechaFin.HasValue || empleadoId.HasValue || !string.IsNullOrEmpty(estado))
        {
            <div class="mt-4">
                <a asp-action="Index" class="text-blue-600 hover:text-blue-800 text-sm">
                    <i class="fas fa-times mr-1"></i>Limpiar filtros
                </a>
            </div>
        }
    </form>
</div>

<!-- Tabla de Liquidaciones -->
<div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Registro de Liquidaciones</h3>
        <p class="text-sm text-gray-500">
            Período: @fechaInicio?.ToString("dd/MM/yyyy") - @fechaFin?.ToString("dd/MM/yyyy")
        </p>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Empleado</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Baja</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Antigüedad</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vacaciones</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Indemnización</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var liquidacion in Model.OrderByDescending(l => l.FechaCreacion))
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full flex items-center justify-center">
                                    <span class="text-white font-semibold text-sm">
                                        @(liquidacion.IdEmpleadoNavigation.NombreCompleto.Split(' ').FirstOrDefault()?.Substring(0, 1))@(liquidacion.IdEmpleadoNavigation.NombreCompleto.Split(' ').Skip(1).FirstOrDefault()?.Substring(0, 1))
                                    </span>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-gray-900">@liquidacion.IdEmpleadoNavigation.NombreCompleto</div>
                                    <div class="text-sm text-gray-500">@liquidacion.IdEmpleadoNavigation.Departamento?.Nombre</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">@liquidacion.FechaBaja.ToString("dd/MM/yyyy")</div>
                            <div class="text-sm text-gray-500">@liquidacion.FechaBaja.ToString("dddd")</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@liquidacion.AntiguedadAnios año(s)</div>
                            <div class="text-sm text-gray-500">@liquidacion.VacacionesPendientes días pendientes</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-semibold text-blue-600">@((liquidacion.PagoVacaciones ?? 0).ToString("C"))</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-semibold text-red-600">@((liquidacion.Indemnizacion ?? 0).ToString("C"))</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-lg font-bold text-green-600">@liquidacion.TotalLiquidacion.ToString("C")</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (liquidacion.Estado == "calculada")
                            {
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    <i class="fas fa-calculator mr-1"></i>Calculada
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    <i class="fas fa-check-circle mr-1"></i>Pagada
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <div class="flex space-x-2">
                                <a asp-action="Details" asp-route-id="@liquidacion.Id" class="text-blue-600 hover:text-blue-900">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (liquidacion.Estado == "calculada")
                                {
                                    <form asp-action="Pagar" asp-route-id="@liquidacion.Id" method="post" class="inline" onsubmit="return confirm('¿Marcar como pagada esta liquidación?')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="text-green-600 hover:text-green-900">
                                            <i class="fas fa-money-check-alt"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        @if (!Model.Any())
        {
            <div class="text-center py-12">
                <i class="fas fa-handshake text-gray-400 text-4xl mb-4"></i>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No hay liquidaciones registradas</h3>
                <p class="text-gray-500 mb-4">No se encontraron liquidaciones para el período seleccionado.</p>
                <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition duration-200">
                    <i class="fas fa-plus mr-2"></i>Primera Liquidación
                </a>
            </div>
        }
    </div>
</div>