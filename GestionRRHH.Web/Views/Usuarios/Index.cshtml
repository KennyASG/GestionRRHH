@model List<GestionRRHH.Web.Models.Entities.Usuario>

@{
    ViewData["Title"] = "Usuarios";
    var totalUsuarios = Model.Count;
    var usuariosActivos = Model.Count(u => u.Estado == "activo");
    var usuariosInactivos = Model.Count(u => u.Estado == "inactivo");
    var administradores = Model.Count(u => u.Rol == "admin");
    var rrhh = Model.Count(u => u.Rol == "rrhh");
    var supervisores = Model.Count(u => u.Rol == "supervisor");
}

@if (TempData["Success"] != null)
{
    <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        @TempData["Error"]
    </div>
}

<!-- Header -->
<div class="mb-6">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Gestión de Usuarios</h1>
            <p class="text-gray-600">Administra los usuarios y permisos del sistema</p>
        </div>
        <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium transition duration-200">
            <i class="fas fa-plus mr-2"></i>Crear Usuario
        </a>
    </div>
</div>

<!-- Métricas Cards -->
<div class="grid grid-cols-1 md:grid-cols-6 gap-4 mb-6">
    <div class="bg-blue-600 rounded-lg p-4 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-blue-100 text-sm">Total Usuarios</p>
                <p class="text-2xl font-bold">@totalUsuarios</p>
            </div>
            <i class="fas fa-users text-2xl opacity-80"></i>
        </div>
    </div>

    <div class="bg-green-600 rounded-lg p-4 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-green-100 text-sm">Activos</p>
                <p class="text-2xl font-bold">@usuariosActivos</p>
            </div>
            <i class="fas fa-user-check text-2xl opacity-80"></i>
        </div>
    </div>

    <div class="bg-red-600 rounded-lg p-4 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-red-100 text-sm">Inactivos</p>
                <p class="text-2xl font-bold">@usuariosInactivos</p>
            </div>
            <i class="fas fa-user-slash text-2xl opacity-80"></i>
        </div>
    </div>

    <div class="bg-purple-600 rounded-lg p-4 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-purple-100 text-sm">Administradores</p>
                <p class="text-2xl font-bold">@administradores</p>
            </div>
            <i class="fas fa-user-cog text-2xl opacity-80"></i>
        </div>
    </div>

    <div class="bg-yellow-600 rounded-lg p-4 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-yellow-100 text-sm">RRHH</p>
                <p class="text-2xl font-bold">@rrhh</p>
            </div>
            <i class="fas fa-user-tie text-2xl opacity-80"></i>
        </div>
    </div>

    <div class="bg-indigo-600 rounded-lg p-4 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-indigo-100 text-sm">Supervisores</p>
                <p class="text-2xl font-bold">@supervisores</p>
            </div>
            <i class="fas fa-user-shield text-2xl opacity-80"></i>
        </div>
    </div>
</div>

<!-- Tabla de Usuarios -->
<div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Lista de Usuarios del Sistema</h3>
        <p class="text-sm text-gray-500">Gestiona los accesos y permisos de los usuarios</p>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usuario</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Empleado Asociado</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rol</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Último Acceso</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Creación</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var usuario in Model.OrderBy(u => u.NombreUsuario))
            {
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                                    <span class="text-white font-semibold text-sm">
                                        @(usuario.NombreUsuario.Substring(0, Math.Min(2, usuario.NombreUsuario.Length)).ToUpper())
                                    </span>
                            </div>
                            <div class="ml-4">
                                <div class="text-sm font-medium text-gray-900">@usuario.NombreUsuario</div>
                                <div class="text-sm text-gray-500">ID: @usuario.Id.ToString().PadLeft(6, '0')</div>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        @if (usuario.IdEmpleadoNavigation != null)
                        {
                            <div class="text-sm text-gray-900">@usuario.IdEmpleadoNavigation.NombreCompleto</div>
                            <div class="text-sm text-gray-500">@usuario.IdEmpleadoNavigation.Departamento?.Nombre</div>
                        }
                        else
                        {
                            <span class="text-sm text-gray-400">Sin empleado asociado</span>
                        }
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        @if (usuario.Rol == "admin")
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                    <i class="fas fa-user-cog mr-1"></i>Administrador
                                </span>
                        }
                        else if (usuario.Rol == "rrhh")
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    <i class="fas fa-user-tie mr-1"></i>RRHH
                                </span>
                        }
                        else if (usuario.Rol == "supervisor")
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                    <i class="fas fa-user-shield mr-1"></i>Supervisor
                                </span>
                        }
                        else
                        {
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    <i class="fas fa-user mr-1"></i>@usuario.Rol?.ToUpper()
                                </span>
                        }
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        @if (usuario.Estado == "activo")
                        {
                            <span class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                                    <span class="text-white font-bold text-sm">A</span>
                                </span>
                        }
                        else
                        {
                            <span class="w-8 h-8 bg-red-500 rounded-full flex items-center justify-center">
                                    <span class="text-white font-bold text-sm">I</span>
                                </span>
                        }
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        @if (usuario.UltimoAcceso.HasValue)
                        {
                            <div class="text-sm text-gray-900">@usuario.UltimoAcceso.Value.ToString("dd/MM/yyyy")</div>
                            <div class="text-sm text-gray-500">@usuario.UltimoAcceso.Value.ToString("HH:mm")</div>
                        }
                        else
                        {
                            <span class="text-sm text-gray-400">Nunca</span>
                        }
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm text-gray-900">@usuario.FechaCreacion?.ToString("dd/MM/yyyy")</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <div class="flex space-x-2">
                            <a asp-action="Edit" asp-route-id="@usuario.Id" class="text-blue-600 hover:text-blue-900">
                                <i class="fas fa-edit"></i>
                            </a>
                            @if (usuario.Estado == "activo")
                            {
                                <form asp-action="Deactivate" asp-route-id="@usuario.Id" method="post" class="inline" onsubmit="return confirm('¿Desactivar este usuario?')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="text-red-600 hover:text-red-900">
                                        <i class="fas fa-user-slash"></i>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Activate" asp-route-id="@usuario.Id" method="post" class="inline" onsubmit="return confirm('¿Activar este usuario?')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="text-green-600 hover:text-green-900">
                                        <i class="fas fa-user-check"></i>
                                    </button>
                                </form>
                            }
                            <button onclick="resetPassword(@usuario.Id)" class="text-yellow-600 hover:text-yellow-900">
                                <i class="fas fa-key"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="text-center py-12">
                <i class="fas fa-users text-gray-400 text-4xl mb-4"></i>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No hay usuarios registrados</h3>
                <p class="text-gray-500 mb-4">Crea el primer usuario del sistema para comenzar.</p>
                <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition duration-200">
                    <i class="fas fa-plus mr-2"></i>Crear Primer Usuario
                </a>
            </div>
        }
    </div>
</div>

<!-- Información de Seguridad -->
<div class="mt-6 p-4 bg-blue-50 rounded-lg">
    <h4 class="text-sm font-medium text-blue-900 mb-2">
        <i class="fas fa-shield-alt mr-2"></i>Información de Seguridad
    </h4>
    <div class="text-sm text-blue-800">
        <p><strong>Roles del Sistema:</strong></p>
        <ul class="list-disc list-inside mt-1 space-y-1">
            <li><strong>Administrador:</strong> Acceso completo al sistema, gestión de usuarios</li>
            <li><strong>RRHH:</strong> Gestión de empleados, nóminas, vacaciones y permisos</li>
            <li><strong>Supervisor:</strong> Consulta de información de su departamento</li>
        </ul>
        <p class="mt-2"><strong>Recomendación:</strong> Mantén actualizadas las contraseñas y revisa periódicamente los accesos.</p>
    </div>
</div>

<script>
    function resetPassword(usuarioId) {
        if (confirm('¿Resetear la contraseña de este usuario? Se enviará una nueva contraseña temporal.')) {
            // Aquí implementarías la lógica para resetear contraseña
            fetch(`/Usuarios/ResetPassword/${usuarioId}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Contraseña reseteada exitosamente. Nueva contraseña: ' + data.newPassword);
                    } else {
                        alert('Error al resetear contraseña: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Error de conexión');
                });
        }
    }
</script>