@model List<GestionRRHH.Web.Models.Entities.DetalleNomina>

<h2>Mi Historial de Nómina</h2>

@if (Model.Count == 0)
{
    <p>No tienes registros de nómina aún.</p>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Periodo</th>
            <th>Tipo</th>
            <th>Total Ingresos</th>
            <th>IGSS</th>
            <th>ISR</th>
            <th>Salario Neto</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdNominaNavigation.FechaInicio.ToShortDateString() - @item.IdNominaNavigation.FechaFin.ToShortDateString()</td>
                <td>@item.IdNominaNavigation.Tipo</td>
                <td>Q @item.TotalIngresos</td>
                <td>Q @item.Igss</td>
                <td>Q @item.Isr</td>
                <td><strong>Q @item.SalarioNeto</strong></td>
            </tr>
        }
        </tbody>
    </table>
}